{
  "name": "@promptdeploy/dashboard",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dashboard/src",
  "projectType": "application",
  "tags": ["scope:frontend", "type:interface"],
  "targets": {
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "dashboard:build"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/dashboard"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "options": {
        "reportsDirectory": "../../coverage/packages/dashboard"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/dashboard/**/*.{ts,tsx}"]
      }
    }
  }
}
